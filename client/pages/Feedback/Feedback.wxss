/* pages/Feedback/Feedback.wxss */
.bg {
  display: flex;
  align-items: center;
  margin-top: 25rpx;
  height: 128rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  background: #ffffff;
}

.boldText {
  font-weight: bold;
  font-size: medium;
  margin-left: 15rpx;
}

.normText {
  font-size: small;
  margin-left: 15rpx;
  color: rgba(29, 29, 38, 0.8);
}


.comment-ipt {
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 165rpx;
  display: flex;
  height: 500rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
  background: #ffffff;
  margin-left: 3px;
  margin-right: 3px;
}

.comment-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.preview-cnt {
  display: flex;
  margin-top: 29rpx;
  margin-left: 29rpx;
}

.preview-image {
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}

.opr-upload {
  display: block;
  margin-top: 29rpx;
  margin-left: 29rpx; 
  width: 43rpx;
  height: 43rpx;
}


.comment-btn {
  margin: 632rpx auto;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #000000;
  background: #FDE669;
}

.comment-btn.dis {
  color: #ffffff;
  background: rgba(52, 55, 61, 0.5)
}